
<div id="header_right">
	<div id="header_right_top">
          <ul id="devise_right_top">
           <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
 
     
  			<li ><%= f.input :email, :placeholder => "Email", :label => false, :autofocus => true, :id => 'devise_email' %></li>
			 <li ><%= f.input :password, :placeholder => "Password", :label => false, :id => 'devise_password' %></li>
			  <li ><%= f.button :submit, "Login", :class => 'button' %></li>
			</ul>
		<div id="header_right_bottom">
			<ul id="devise_right_bottom">
			  <li ><%= f.input :remember_me, :id => 'devise_remember_me', :as => :boolean if devise_mapping.rememberable? %></li>
			  <li>
<%= link_to "Forgot your password?", new_password_path(resource_name) %></li>
			 
			</ul>
	</div>
	</div>
	</div>
  
<% end %> 
