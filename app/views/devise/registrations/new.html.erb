<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<p><%= f.label :name %><br />
<%= f.text_field :name %></p>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

<div><%= f.label :pledge_class %><br />
  <%= f.select :pledge_class, ["2013", "2014", "2015", "2016", "2017"] %></div>

    <div><%= f.label :gender %><br />
  <%= f.select :gender, ["male", "female"] %></div>
  <div><%= f.label :role %><br />
  <div><%= f.collection_select :role, Student::ROLES, :to_s, :humanize %></div>

  <div><%= f.label :house_id, "House" %><br />
    <%= f.select :house_id, options_from_collection_for_select(House.all, :id, :name) %></div>


  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>