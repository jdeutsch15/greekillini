<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :interests %><br />
    <%= f.text_field :interests %>
  </div>
  <div class="field">
    <%= f.label :relationship_status %><br />
    <%= f.select :relationship_status, ["Single", "In A Relationship", "Married"] %>
  </div>
  <div class="field">
    <%= f.label :birthday %><br />
    <%= f.date_select :birthday, start_year: 1990, :use_month_numbers => true, :use_two_digit_numbers => true, order: [:month, :day, :year],prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }  %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.hidden_field :student_id, :value=> current_student.id%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
